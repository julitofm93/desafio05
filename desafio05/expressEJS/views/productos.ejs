<%- include('./index')-%>

    <h2 style="color: blue; text-align: center;">Productos</h2>

        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                <% productos.forEach(prod=> { %>
                    <tr>
                        <td>
                            <%= prod.title %>
                        </td>
                        <td>$<%= prod.price %>
                        </td>
                        <td>
                        <td><img width="50" src=<%= prod.thumbnail %> alt="not found"></td>
                    </tr>
                    
                    <% }) %>
            </table>
            <input type="button" onclick="location.href='/'" value="Registrar productos">
        </div>