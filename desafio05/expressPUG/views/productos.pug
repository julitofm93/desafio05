extends index

block partial
    input(type="button" onclick="location.href='/'" value="Registrar un producto")

    h2(style="color: blue; text-align: center;")="Productos"
    
        div(class="table-responsive")
            table(class="table table-dark")
                tr
                    th="Nombre"
                    th="Precio"
                    th="Foto"
                
                each prod in productos
                
                    tr
                        td=prod.title
                        td=prod.price
                        td
                            img(src=prod.thumbnail width="50")